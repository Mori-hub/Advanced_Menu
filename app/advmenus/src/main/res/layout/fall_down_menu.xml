<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mainfalldown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:cardBackgroundColor="#B9050000"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/ivM"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@android:color/holo_blue_light"
                    android:scaleType="center"
                    app:srcCompat="@android:drawable/ic_dialog_email" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvM1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/ivM1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@android:color/holo_orange_dark"
                    android:scaleType="center"
                    app:srcCompat="@android:drawable/ic_dialog_map" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvM2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/ivM2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@android:color/holo_green_light"
                    android:scaleType="center"
                    app:srcCompat="@android:drawable/ic_menu_set_as" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvM3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/ivM3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@android:color/holo_red_light"
                    android:scaleType="center"
                    app:srcCompat="@android:drawable/ic_lock_idle_lock" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvM4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/ivM4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@android:color/holo_red_dark"
                    android:scaleType="center"
                    app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvM5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/ivM5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@android:color/holo_blue_bright"
                    android:scaleType="center"
                    app:srcCompat="@android:drawable/btn_star" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvM"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@id/cvM"
                android:gravity="center"
                android:padding="4dp"
                android:text="@android:string/VideoView_error_button"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/holo_orange_light" />

            <TextView
                android:id="@+id/tvM1"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_toStartOf="@id/cvM1"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/material_motion_easing_linear"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/holo_orange_light" />

            <TextView
                android:id="@+id/tvM2"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_toStartOf="@id/cvM2"
                android:gravity="center"
                android:padding="4dp"
                android:text="@android:string/VideoView_error_button"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/holo_orange_light" />

            <TextView
                android:id="@+id/tvM3"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_toStartOf="@id/cvM3"
                android:gravity="center"
                android:padding="4dp"
                android:text="@android:string/VideoView_error_button"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/holo_orange_light" />

            <TextView
                android:id="@+id/tvM4"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_toStartOf="@id/cvM4"
                android:gravity="center"
                android:padding="4dp"
                android:text="@android:string/VideoView_error_button"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/holo_orange_light" />

            <TextView
                android:id="@+id/tvM5"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@id/cvM5"
                android:gravity="center"
                android:padding="4dp"
                android:text="@android:string/VideoView_error_button"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/holo_orange_light" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>